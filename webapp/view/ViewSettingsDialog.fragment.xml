<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<ViewSettingsDialog
		id="viewSettingsDialog"
		confirm="onConfirmViewSettingsDialog"
		resetFilters="onViewSettingsDialogResetFilters">
		<filterItems>
			<ViewSettingsFilterItem
				id="filterItems"
				text="{i18n>masterFilterName}"
				key="Price"
				multiSelect="false">
				<items>
					<ViewSettingsItem
						text="{i18n>masterFilter1}"
						key="Filter1"
						id="viewFilter1"/>
					<ViewSettingsItem
						text="{i18n>masterFilter2}"
						key="Filter2"
						id="viewFilter2"/>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem
				id="filterItemsStatus"
				text="{i18n>statusFilter}"
				key="Status"
				multiSelect="true">
				<items>
					<ViewSettingsItem
						text="{i18n>openStatusFilter}"
						key="FilterStatusOpen"
						id="viewFilterStatusOpen"/>
					<ViewSettingsItem
						text="{i18n>rejStatusFilter}"
						key="FilterStatusRej"
						id="viewFilterStatusRej"/>
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>

</core:FragmentDefinition>